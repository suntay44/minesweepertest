<div class="container">
  <h2><%= @minesweeper_board.board_name %></h2>
  <p>Generated by: <%= @minesweeper_board.email %></p>

  <table class="table table-bordered table-hover">
    <% board_data = JSON.parse(@minesweeper_board.data) %>
    <% board_data.each_with_index do |row, row_idx| %>
      <tr>
        <% row.each_with_index do |cell, col_idx| %>
          <td>
              <% if cell['mine'] %>
              <%= image_tag('bomb.png', class: 'cell-image') %>
              <% else %>
              <%= image_tag('whitetile.png', class: 'cell-image') %>
              <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
